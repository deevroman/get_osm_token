{
  "manifest_version": 2,
  "name": "Get OSM OAuth Token",
  "version": "0.1.2",
  "description": "__MSG_extensionDescription__",
  "author": "Roman Deev",
  "homepage_url": "https://github.com/deevroman/get_osm_token",
  "icons": {
    "48": "icons/Oauth_logo.svg",
    "96": "icons/Oauth_logo.svg"
  },
  "permissions": [
    "https://www.openstreetmap.org/*",
    "https://master.apis.dev.openstreetmap.org/*",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "clipboardWrite",
    "storage"
  ],
  "background": {
    "scripts": [
      "src/constants.js",
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://master.apis.dev.openstreetmap.org/oauth2/applications/*",
        "https://www.openstreetmap.org/oauth2/applications/*"
      ],
      "js": [
        "src/constants.js",
        "src/setup_button.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "48": "icons/Oauth_logo.svg"
    }
  },
  "default_locale": "en"
}